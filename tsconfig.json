{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@adapters/*": ["src/adapters/*"],
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@ports/*": ["src/ports/*"],
      "@types/*": ["src/types/*"],
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "dist"]
}